<Window x:Class="STAR.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STAR.View"
        mc:Ignorable="d"
        Title="Main" Height="800" Width="1280">
    <Window.Resources>
        <CollectionViewSource x:Key="PacketCollectionViewSource" CollectionViewType="ListCollectionView" />
    </Window.Resources>
    <Grid>
        <Menu FontSize="15">
            <MenuItem Header="_File">
                <MenuItem Header="_Open Files" Click="OpenFilesButton_Click"/>
                <MenuItem Header="_Exit"/>
            </MenuItem>
            <MenuItem Header="_Options">
                <!-- Empty -->
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Manage users"/>
                <MenuItem Header="_Display Error Causes" />
                <MenuItem Header="_Show groups" IsCheckable="True" IsChecked="True" />
            </MenuItem>
            <MenuItem Header="_Help">
                <!-- Empty -->
            </MenuItem>
        </Menu>
        <Grid Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="8*" />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.6*" />
                        <ColumnDefinition Width="8.4*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.5*" />
                        <RowDefinition Height="15*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,20,0,10">
                        <ComboBox x:Name="ComboBox" Width="120" Margin="0,0,10,0">
                            <ComboBoxItem Content="Parity Errors"/>
                            <ComboBoxItem Content="Disconnect Errors"/>
                        </ComboBox>
                        <TextBox x:Name="TextBox" Width="200" Background="White" Margin="0,0,0,0"></TextBox>
                        <Button x:Name="Button" Width="100">Filter</Button>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Margin="0,0,10,0" >
                        <CheckBox x:Name="ChkShowValidPackets" Click="ShowValidPacketCheckbox_Click" Content="Valid Packets" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkShowInvalidPackets" Click="ShowInvalidPacketCheckbox_Click" Content="Invalid Packets" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkShowErrors" Click="ShowErrorCheckbox_Click" Content="Errors" FontSize="15" Margin="0,0,0,25" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort1" Click="PortFilterCheckbox_Click" Content="Port 1" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort2" Click="PortFilterCheckbox_Click" Content="Port 2" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort3" Click="PortFilterCheckbox_Click" Content="Port 3" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort4" Click="PortFilterCheckbox_Click" Content="Port 4" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort5" Click="PortFilterCheckbox_Click" Content="Port 5" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort6" Click="PortFilterCheckbox_Click" Content="Port 6" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort7" Click="PortFilterCheckbox_Click" Content="Port 7" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                        <CheckBox x:Name="ChkPort8" Click="PortFilterCheckbox_Click" Content="Port 8" FontSize="15" Margin="0,0,0,10" VerticalAlignment="Top" VerticalContentAlignment="Center" IsEnabled="False" IsChecked="True" />
                    </StackPanel>

                    <DataGrid
                            DataContext="{DynamicResource PacketCollectionViewSource}"
                            ItemsSource="{Binding}"
                            AutoGenerateColumns="False"
                            Name="PacketsDataGrid"
                            FontSize="15"
                            CanUserAddRows="False"
                            CanUserDeleteRows="False" 
                            HeadersVisibility="Column"
                            Margin="0,0,10,0"
                            HorizontalAlignment="Left"
                            Grid.Row="1"
                            Grid.Column="1" AlternationCount="2" AlternatingRowBackground="#FF31E8DF" RowBackground="#FF90DAE2">
                        <DataGrid.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding PacketType}" Value="Error">
                                        <Setter Property="Background" Value="Red" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.CellStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="TimeTicks" Binding="{Binding Path=TimeTicks}" SortDirection="Ascending" CanUserSort="False" Visibility="Hidden" />
                            <DataGridTextColumn Header="Timestamp" Binding="{Binding Path=TimeString}" CanUserSort="False" />
                            <DataGridTextColumn Header="Entry" Binding="{Binding Path=EntryPort}" CanUserSort="False" />
                            <DataGridTextColumn Header="Exit" Binding="{Binding Path=ExitPort}" CanUserSort="False" />
                            <DataGridTextColumn Header="Type" Binding="{Binding Path=PacketType}" CanUserSort="False" />
                            <DataGridTextColumn Header="Message" Binding="{Binding Path=Message}" CanUserSort="False" />
                        </DataGrid.Columns>


                    </DataGrid>

                    <StackPanel Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                        <Rectangle Width="25" Fill="LightGreen" Stroke="Gray" Margin="0,10,0,0"/>
                        <Label FontSize="15" VerticalAlignment="Bottom" Margin="0,0,10,0">Start of Packet</Label>
                        <Rectangle Width="25" Fill="LightBlue" Stroke="Gray" Margin="0,10,0,0"/>
                        <Label FontSize="15" VerticalAlignment="Bottom" Margin="0,0,10,0">Packet</Label>
                        <Rectangle Width="25" Fill="LightCoral" Stroke="Gray" Margin="0,10,0,0"/>
                        <Label FontSize="15" VerticalAlignment="Bottom" Margin="0,0,10,0">End of File</Label>
                        <Rectangle Width="25" Fill="Red" Stroke="Gray" Margin="0,10,0,0"/>
                        <Label FontSize="15" VerticalAlignment="Bottom">Error</Label>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="0" Margin="0,0,0.333,0.333">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <ScrollViewer HorizontalScrollBarVisibility="Visible">
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Label Grid.Column="0" Grid.ColumnSpan="2" FontSize="20">
                                    Data Packet
                                </Label>
                                <Label Grid.Row="1" Grid.Column="0" Margin="0,0,0,10">Timestamp</Label>
                                <TextBox x:Name="txtTimestamp" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Label Grid.Row="2" Grid.Column="0" Margin="0,0,0,10">Protocol ID</Label>
                                <TextBox x:Name="txtProtocolID" Grid.Row="2" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Label Grid.Row="3" Grid.Column="0" Margin="0,0,0,10">Address</Label>
                                <TextBox x:Name="txtAddress" Grid.Row="3" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Label Grid.Row="4" Grid.Column="0" Margin="0,0,0,10">Port</Label>
                                <TextBox x:Name="txtPort" Grid.Row="4" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Label Grid.Row="5" Grid.Column="0" Margin="0,0,0,10">Destination</Label>
                                <TextBox x:Name="txtDestination" Grid.Row="5" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Label Grid.Row="6" Grid.Column="0" Margin="0,0,0,10">Contents</Label>
                                <TextBox x:Name="txtContents" Grid.Row="6" Grid.Column="1" Margin="0,0,0,10"></TextBox>
                                <Button x:Name="btnPrevious" Grid.Row="7" Grid.Column="0" Width="100" HorizontalAlignment="Left">
                                    Previous
                                </Button>
                                <Button x:Name="btnNext" Grid.Row="7" Grid.Column="1" Width="100" HorizontalAlignment="Right">
                                    Next
                                </Button>
                            </Grid>
                        </ScrollViewer>

                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Label Grid.Row="0" FontSize="20">Packet Errors</Label>
                            <ListView Grid.Row="1" FontSize="15" Height="150"></ListView>
                        </Grid>
                    </Grid>
                </Grid>


                <Grid Grid.Column="2" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.5*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Label FontSize="20">Statistics</Label>
                    <Label Grid.Row="1" FontSize="15" Margin="0,0,0,10">Total Data Characters</Label>
                    <TextBox x:Name="DataCharTotalText" Grid.Column="1" Grid.Row="1" FontSize="15" Margin="0,0,0,10"></TextBox>
                    <Label Grid.Row="2" FontSize="15" Margin="0,0,0,10">Total Packets</Label>
                    <TextBox x:Name="PacketsTotalText" Grid.Column="1" Grid.Row="2" FontSize="15" Margin="0,0,0,10"></TextBox>
                    <Label Grid.Row="3" FontSize="15" Margin="0,0,0,10">Total Errors</Label>
                    <TextBox x:Name="ErrorsFoundTotalText" Grid.Column="1" Grid.Row="3" FontSize="15" Margin="0,0,0,10"></TextBox>
                    <Label Grid.Row="4" FontSize="15" Margin="0,0,0,10">Data Rate</Label>
                    <TextBox x:Name="DataCharPerSecondText" Grid.Column="1" Grid.Row="4" FontSize="15" Margin="0,0,0,10"></TextBox>
                    <Label Grid.Row="5" FontSize="15" Margin="0,0,0,10">Packet Rate</Label>
                    <TextBox x:Name="PacketsPerSecondText" Grid.Column="1" Grid.Row="5" FontSize="15" Margin="0,0,0,10"></TextBox>
                    <Label Grid.Row="6" FontSize="15" Margin="0,0,0,10">Error Rate</Label>
                    <TextBox x:Name="ErrorPerSecondText" Grid.Column="1" Grid.Row="6" FontSize="15" Margin="0,0,0,10"></TextBox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
 
