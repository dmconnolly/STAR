<Window x:Class="STAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="750">
    <Grid Margin="10,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="75" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="OpenFile1Button" Content="Open File 1" Grid.Column="0" Grid.Row="0" Margin="0, 0, 0 10" Width="75" Click="OpenFileButton_Click"/>
        <Button x:Name="OpenFile2Button" Content="Open File 2" Grid.Column="0" Grid.Row="1" Margin="0, 0, 0 10" Width="75" Click="OpenFileButton_Click"/>
        <Button x:Name="ClearFilesButton" Content="Clear Files" Grid.Column="0" Grid.Row="2" Margin="0, 0, 0 10" Width="75" Click="ClearFilesButton_Click" IsEnabled="False"/>
    </Grid>
</Window>
