<Window x:Class="STAR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="750">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Menu DockPanel.Dock="Top" Margin="0,0,0,0" Height="25" VerticalAlignment="Top">
            <MenuItem Header="_File" Height="25" Width="40" FontSize="13">
                <MenuItem Header="_Open" Click="OpenFileButton_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
